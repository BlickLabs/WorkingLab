.contact-form
  max-width 540px
  center-block()
  width 90%
  margin-top remify(40)
  margin-bottom remify(86)
  text-align center
  font-size 16px

  .button-wrapper
    margin-top remify(103)

  .site-button
    font-size 13px
    padding 1.05em 3.4em 1em 3.4em

  .custom-loader
    margin-top remify(50)

  .form-message.success,
  .form-message.error
    margin-top 2em

@media screen and (max-width: 767px)
  .contact-form
    font-size 14px

@media screen and (max-width: 700px)
  .contact-form .inputs-row
    justify-content center

    .input-wrapper
      flex-basis 100%