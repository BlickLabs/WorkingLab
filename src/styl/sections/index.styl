.homepage-hero
  height calc(95vh - 72px)
  min-height 400px
  position relative
  video
    object-fit fill

  @media screen and (orientation: portrait)
    @media screen and (min-height: 400px) and (min-width: 400px)
      max-height 76vw

.homepage-hero__carousel
  position absolute
  width 100%

  &, .slick-list,
  .slick-track,
  .homepage-hero__carousel-item
    height 100%

  .slick-list
    position fixed
    top 0
    left 0
    z-index -1
    width 100%

  .slick-dots
    position absolute
    bottom 10px
    transform scale(0.5)
    list-style none
    padding 0
    width 100%
    text-align center

    li
      display inline-block

    li:nth-child(n+1)
      margin-left 10px

    button
      background white
      outline none
      border none
      overflow hidden
      color white
      height 12px
      font-size 0
      line-height 5px
      text-overflow hidden
      cursor pointer
      border-radius 50%
      opacity 0.58

    .slick-active button
      opacity 1

.homepage-hero__layer
  background rgba(black, 0.25)
  height 100%

.homepage-hero__inner
  position absolute
  height 100%
  z-index 2
  color white
  text-align center
  width 86%
  max-width 610px

  .site-button
    font-size remify(13)
    margin-top remify(17)

.homepage-hero__video-cover
  position absolute
  z-index 1
  width 100%
  height 100%
  -webkit-box-shadow: inset 0px 0px 1000px 1000px rgba(0,0,0,0.3);
  -moz-box-shadow: inset 0px 0px 1000px 1000px rgba(0,0,0,0.3);
  box-shadow: inset 0px 0px 1000px 1000px rgba(0,0,0,0.3);
  display flex
  align-items center
  justify-content center
#play-btn.hide
  display none
#play-btn
  background-color rgba(255,255,255,0.45)
  width 6rem
  height 6rem
  border-radius 50%
  z-index 3
  display flex
  align-items center
  justify-content center
  position absolute
  .video-cover-play
    width 0
    height 0
    border-top 1rem solid transparent
    border-left 2rem solid #272727
    border-bottom 1rem solid transparent
    position absolute
    left 50%
    transform translateX(-40%)

.homepage-hero__title
  font-weight normal
  letter-spacing remify(-0.6)
  position absolute
  top 20%
  transition top 0.5s ease

.homepage-hero__subtitle
  display block
  margin-top remify(72)
  font-size remify(20)

.homepage-introduction
  background white
  padding remify(26) 0 remify(23) 0
  text-align center

.homepage-introduction__icon
  width remify(116)

.homepage-introduction__title
  margin-top remify(31)
  font-size remify(32)
  letter-spacing remify(0.6)
  color #525876
  font-weight $bold

.homepage-introduction__text
  center-block()
  margin-top remify(17)
  max-width 380px
  font-size remify(16.5)
  color #9b9b9b
  width 94%

  &::after
    content ' '
    background #e5e5e5
    display block
    height 1px
    center-block()
    margin-top remify(31)
    width remify(58)

.homepage-free-day
  background #f6f6f6
  padding remify(19) 0

.homepage-free-day__inner
  center-block()
  width 97%
  position relative
  padding-left 156px

.homepage-free-day__content
  border-radius 3px
  background white
  width remify(278)
  padding remify(48) remify(50) remify(44) remify(34)
  position absolute
  left 0
  top 50%
  transform translateY(-50%)
  z-index 1

  .site-button
    font-size remify(13)

.homepage-free-day__title
  color #414563
  font-size remify(29)
  font-weight $bold

.homepage-free-day__text
  color #414563
  font-size remify(15)
  line-height 1.47
  margin-top remify(17)

.homepage-free-day__cover
  background-image url('../img/backgrounds/parallax-home.jpg')
  width 100%
  height remify(475)
  transform rotateY(180deg)
  background-position left

.homepage-services
  background white
  padding remify(59) 0
  text-align center

.homepage-services__inner
  width 90%
  max-width 638px
  center-block()

  .site-button
    margin-top remify(88)
    font-size remify(13)
    min-width remify(137)

.homepage-services__title
  font-size remify(19)
  font-weight normal
  color #525876

.homepage-services__items
  display flex
  justify-content space-between
  margin-top remify(16)

.homepage-services__item
  padding-top remify(50)

.homepage-services__item-icon
  display block
  height remify(65)
  center-block()
  transition transform 0.2s

  &:hover
    transform scale(1.4)

.homepage-services__item-label
  display block
  font-size remify(15)
  color #525876
  letter-spacing remify(-0.2)
  margin-top remify(35)
  max-width remify(115)
  center-block()

.homepage-newsletter
  background-image url('../img/backgrounds/home-newsletter.jpg')
  padding remify(50) 0 remify(38) 0

  .custom-loader
    margin-top remify(30)

    div div
      background white

  .error,
  .success
    color white

  .error .fa
    color $errorColor

  .success .fa
    color $successColor

  label.error
    padding-top 0.6em

    &::before
      color $errorColor
      content '‚óè'
      padding-right 0.4em

.homepage-newsletter__quote,
.homepage_newsletter__form
  width 90%

.homepage-newsletter__quote
  color white
  margin-left 5%
  max-width 433px

.homepage-newsletter__quote-text
  font-size remify(38)
  letter-spacing remify(-0.6)

.homepage-newsletter__quote-author
  display block
  font-size remify(21)
  line-height 1.71
  letter-spacing remify(-0.4)
  margin-top remify(10)

  &::before
    content '- '

.homepage_newsletter__form
  max-width 351px
  center-block()
  text-align center
  margin-top remify(30)

  .button-wrapper
    margin-top remify(17)
    font-size remify(13)

  .site-button
    width remify(137)

.homepage_newsletter__form-title
  font-size remify(17)
  text-transform uppercase
  color white
  font-weight $bold
  letter-spacing remify(-0.3)

#home-email
  background-color rgba(white, 0.9)
  background-image url('../img/icons/message.png')
  background-size 22px 15px
  background-position remify(18)
  background-repeat no-repeat
  border-radius 3px
  border none
  outline none
  margin-top remify(17)
  padding remify(18) remify(15) remify(18) 45px
  width 100%
  position relative

.homepage-locations
  background white
  text-align center
  padding-top 160px
  padding-bottom remify(90)
  simple-border('bottom', 1px, #e5e5e5)

.homepage-locations__title
  font-size remify(18)
  letter-spacing remify(0.6)
  color #525876
  text-transform uppercase

.homepage-locations__inner
  margin-top 12px
  display flex
  justify-content space-around
  max-width 860px
  width 90%
  flex-wrap wrap
  center-block()

.homepage-locations__item
  flex-basis 210px
  font-size 14px
  color #525876
  line-height 1.36
  margin-top remify(60)

  .site-button
    font-size 13px
    padding 13px 33px
    line-height 1
    margin-top remify(34)

.homepage-locations__icon
  width 33px

.homepage-locations__item-location
  display block
  margin-top 17px

.locations-modal
  width 85%
  padding 0

.locations-carousel
  .slick-prev,
  .slick-next
    top 50%
    color white

  .slick-prev
    left 0
    transform translate(-120%, -50%)

  .slick-next
    right 0
    transform translate(120%, -50%)

.homepage-testimonials
  background white
  position relative
  z-index 1
  padding remify(56) 0 remify(103) 0
  text-align center

.homepage-testimonials__title
  color #525876
  font-size remify(19)
  font-weight normal

.homepage-testimonials__carousel
  width 80%
  margin-top remify(34)
  center-block()
  position relative
  max-width 822px

  .slick-prev,
  .slick-next
    top 'calc(50% + %s)' % remify(47)
    transform translateY(-50%)
    color $blue

  .slick-prev
    left remify(-30)

  .slick-next
    right remify(-30)

  .slick-dots
    display flex
    justify-content center
    position absolute
    bottom -55px
    left 50%
    transform translate(-50%, 0) scale(0.5)
    list-style none
    padding 0
    width 100%

    li
      margin-left 10px
      display inline-block
      button
        cursor pointer
        color transparent
        overflow hidden
        outline none
        border-radius 100%
        border none
        background-color #898989
        opacity 0.3
        height 14px
        width 14px
        font-size 0
    .slick-active
      button
        background-color $blue
        opacity 1

.homepage-testimonials__carousel,
.locations-carousel
  .slick-prev,
  .slick-next
    position absolute
    cursor pointer
    font-size remify(60)
    z-index 2
    background none
    border none
    outline none


.home-second-carousel
  position relative
  .slick-list
    overflow visible !important
  .slick-dots
    position absolute
    bottom 10px
    transform scale(0.5)
    list-style none
    padding 0
    width 100%
    text-align center

    li
      display inline-block

    li:nth-child(n+1)
      margin-left 10px

    button
      background white
      outline none
      border none
      overflow hidden
      color white
      height 12px
      font-size 0
      line-height 5px
      text-overflow hidden
      cursor pointer
      border-radius 50%
      opacity 0.58

    .slick-active button
      opacity 1
    
.second-slick-prev, .second-slick-next
  background: none
  border none
  bottom -70px
  color $blue
  cursor pointer
  font-size remify(40px)
  margin 0 auto
  outline none !important
  position absolute
  
.second-slick-prev
  left 0
  right 60px
  width: 40px
  
.second-slick-next
  left 60px
  right 0
  width 40px

.homepage-testimonials__item
  outline none

.homepage-testimonials__item-icon
  height remify(140)
  width remify(140)
  border-radius 50%
  center-block()
  simple-border('all', 2px, $blue)

.homepage-testimonials__item-title
  color #3b7adb
  font-size remify(18)

.homepage-testimonials__item-content
  simple-border('all', 1px, #e5e5e5)
  margin-top remify(-35)
  position relative
  padding remify(69) remify(31) remify(17) remify(31)
  z-index -1
  min-height remify(212)
  width 95%
  center-block()

.homepage-testimonials__item-text
  font-size 14px
  color #898989
  line-height 1.36
  margin 0
  margin-top 12px

.free-day-modal__close
  right 0
  transform translateY(-100%)
  top remify(-15)
  left initial

  &::before
    color white
    font-size remify(50)

.free-day-modal__description
  font-size 15px
  color #5a5a5a

.free-day-modal__form
  .input-wrapper
    font-size 15px
    width 100%
    max-width 480px
    center-block()

  .custom-loader
    margin-top remify(35)
    margin-bottom remify(10)

  .material-div
    padding-top remify(5)

  .site-button
    font-size remify(14.2)
    padding 1em 2.5em

  .button-wrapper
    margin-top remify(30)
    
.site-select-input
  -webkit-appearance none
  -moz-appearance none
  background-color #fff
  border-left none
  border-right none
  border-top none
  color #3a3a3a
  font-family inherit
  height 44px
  padding 0.6em 0
  
.site-select-container
  background url('../img/icons/down-arrow.png')
  background-position right 20px center
  background-repeat no-repeat
  background-size 15px
  
.flatpickr-calendar.inline
  transform scale(0.8)

.flatpickr-current-month
  span
    &.cur-month
      font-weight 500 !important
      
.appointment-form-modifier
  margin-bottom 0
  margin-top 0
  
.appointment-submit-modifier
  margin-top 1.875rem !important
  
.homepage-hero-title-modifier
  padding: 0 90px
  font-size remify(35)

.homepage-hero_wrapper
  width 100%
  position absolute
  transform translateX(-50%)
  bottom 15%
  left 50%
  transition bottom 0.5s ease

.title-translate
  top 35%
  transition top 0.5s ease

.wrapper-translate
  bottom 30%
  transition bottom 0.5s ease

@media screen and (max-width: 925px)

  video
    object-fit cover !important

  .homepage-testimonials__itemss
    max-width 500px

  .homepage-testimonials__item
    flex-basis 100%

  .homepage-testimonials__item-content
    min-height initial
    padding-bottom remify(32)
    
  .homepage-hero-title-modifier
    padding 0

@media screen and (max-width: 767px)
  .homepage-hero__title
    top 63%
  .homepage-hero_wrapper
    bottom 5%
  .homepage-free-day__content
    width remify(215)
    padding remify(30) remify(45) remify(35) remify(25)
  .homepage-testimonials__carousel
    .slick-prev
      left -6rem !important
    .slick-next
      right -1.65em!important
  video
    object-fit cover !important

  .homepage-services__items
    max-width 400px
    flex-wrap wrap
    justify-content space-around
    center-block()

  .homepage-services__item
    flex-basis 40%

  .free-day-modal__description,
  .free-day-modal__form .input-wrapper
    font-size 13px

@media screen and (max-width: 450px)
  .homepage-locations
    padding-top 0

  .home-second-carousel
    margin-bottom 150px
    img
      height 150px
    .slick-dots
      bottom -3.5em !important
      opacity 1
      //background-color #0b6bc1
      button
        background-color #000 !important
        opacity 0.4
        z-index 4

  .homepage-hero-title-modifier
    font-size remify(34)

  video
    object-fit cover !important

  .homepage-free-day
    padding 0

  .homepage-free-day__content
    width remify(230)
    padding remify(30) remify(45) remify(35) remify(25)

  .homepage-free-day__inner
    width 100%
    padding-left 30%

