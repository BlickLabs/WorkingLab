.homepage-hero
  background-image url('../img/backgrounds/hero.jpg')
  height calc(95vh - 72px)
  min-height 400px

  @media screen and (orientation: portrait)
    @media screen and (min-height: 400px) and (min-width: 400px)
      max-height 76vw

.homepage-hero__layer
  background rgba(black, 0.2)
  height 100%

.homepage-hero__inner
  color white
  text-align center
  width 86%
  max-width 610px

  .site-button
    font-size remify(13)
    margin-top remify(17)

.homepage-hero__title
  font-size remify(39)
  font-weight normal
  letter-spacing (-0.6)

.homepage-hero__subtitle
  display block
  margin-top remify(72)
  font-size remify(20)

.homepage-introduction
  padding remify(26) 0 remify(23) 0
  text-align center

.homepage-introduction__icon
  width remify(116)

.homepage-introduction__title
  margin-top remify(31)
  font-size remify(18)
  letter-spacing remify(0.6)
  text-transform uppercase
  color #525876

.homepage-introduction__text
  center-block()
  margin-top remify(11)
  max-width 336px
  font-size remify(15)
  color #9b9b9b
  width 90%

  &::after
    content ' '
    background #e5e5e5
    display block
    height 1px
    center-block()
    margin-top remify(31)
    width remify(58)

.homepage-free-day
  background #f6f6f6
  padding remify(19) 0

.homepage-free-day__inner
  center-block()
  width 90%
  max-width 822px
  position relative
  padding-left 156px

.homepage-free-day__content
  border-radius 3px
  background white
  max-width 278px
  padding remify(48) remify(55) remify(44) remify(34)
  position absolute
  left 0
  top 50%
  transform translateY(-50%)

  .site-button
    font-size remify(13)

.homepage-free-day__title
  color #414563
  font-size remify(29)
  font-weight bold

.homepage-free-day__text
  color #414563
  font-size remify(15)
  line-height 1.47
  margin-top remify(17)

.homepage-free-day__cover
  background-image url('../img/backgrounds/home.jpg')
  max-width 666px
  width 100%
  height remify(475)

.homepage-services
  padding remify(59) 0
  text-align center

.homepage-services__inner
  width 90%
  max-width 638px
  center-block()

  .site-button
    margin-top remify(88)
    font-size remify(13)
    min-width remify(137)

.homepage-services__title
  font-size remify(19)
  font-weight normal
  color #525876

.homepage-services__items
  display flex
  justify-content space-between
  margin-top remify(16)

.homepage-services__item
  padding-top remify(50)

.homepage-services__item-icon
  display block
  height remify(40)
  center-block()

.homepage-services__item-label
  display block
  font-size remify(15)
  color #525876
  letter-spacing remify(-0.2)
  margin-top remify(35)
  max-width remify(143)
  center-block()

@media screen and (max-width: 767px)
  .homepage-services__items
    max-width 400px
    flex-wrap wrap
    justify-content space-around
    center-block()

  .homepage-services__item
    flex-basis 40%

@media screen and (max-width: 450px)
  .homepage-free-day
    padding 0

  .homepage-free-day__inner
    width 100%
    padding-left 30%