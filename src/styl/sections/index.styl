.homepage-hero
  background-image url('../img/backgrounds/hero.jpg')
  height calc(95vh - 72px)
  min-height 400px

  @media screen and (orientation: portrait)
    @media screen and (min-height: 400px) and (min-width: 400px)
      max-height 76vw

.homepage-hero__layer
  background rgba(black, 0.2)
  height 100%

.homepage-hero__inner
  color white
  text-align center
  width 86%
  max-width 610px

  .site-button
    font-size remify(13)
    margin-top remify(17)

.homepage-hero__title
  font-size remify(39)
  font-weight normal
  letter-spacing (-0.6)

.homepage-hero__subtitle
  display block
  margin-top remify(72)
  font-size remify(20)

.homepage-introduction
  padding remify(26) 0 remify(23) 0
  text-align center

.homepage-introduction__icon
  width remify(116)

.homepage-introduction__title
  margin-top remify(31)
  font-size remify(18)
  letter-spacing remify(0.6)
  text-transform uppercase
  color #525876

.homepage-introduction__text
  center-block()
  margin-top remify(11)
  max-width 336px
  font-size remify(15)
  color #9b9b9b
  width 90%

  &::after
    content ' '
    background #e5e5e5
    display block
    height 1px
    center-block()
    margin-top remify(31)
    width remify(58)