.services__items
  display flex
  flex-wrap wrap
  max-width 556px
  width 90%
  center-block()
  margin-top remify(46)
  margin-bottom remify(141)
  justify-content space-between
  position relative

  &::after
    position absolute
    left 50%
    width 1px
    height 100%
    content ' '
    display block
    background #e5e5e5
    top 5%

.services__item
  align-items center
  margin-top remify(26)
  display flex

  &:nth-child(2n + 1)
    flex-basis 45%

    .services__item-icon
      width remify(22)

  &:nth-child(2n)
    flex-basis 34%

    .services__item-icon
      width remify(28)

  &:hover .services__item-icon
    transform scale(1.4)

.services__item-icon
  transition transform 0.2s

.services__item-text
  margin-left remify(23)
  font-size remify(15)
  letter-spacing (-0.2)
  color #525876

@media screen and (max-width: 650px)
  .services__items::after
    content ''
    display none

  .services__item:nth-child(2n),
  .services__item:nth-child(2n+1)
    flex-basis 45%
    justify-content center
    flex-wrap wrap
    text-align center
    margin-top remify(50)

  .services__item-text
    flex-basis 100%
    margin-top remify(20)
    margin-left 0
    text-align center